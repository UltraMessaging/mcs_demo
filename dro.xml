<?xml version="1.0" encoding="UTF-8" ?>
<tnw-gateway version="1.0">
  <daemon>
    <name>dro1</name>
    <log type="console"/>
    <pidfile>dro.pid</pidfile>
    <monitor interval="5">
      <transport-module module="lbm" options="config=mon.cfg"/>
      <format-module module="pb"/>
    </monitor>
    <xml-config>um.xml</xml-config>
  </daemon>
  <portals>
    <endpoint>
      <name>TRD1</name>
      <domain-id>1</domain-id>
      <lbm-attributes>
      	<option name="context_name" scope="context" value="TRD1" />
      </lbm-attributes>
    </endpoint>
    <endpoint>
      <name>TRD2</name>
      <domain-id>2</domain-id>
      <lbm-attributes>
      	<option name="context_name" scope="context" value="TRD2" />
      </lbm-attributes>
    </endpoint>
  </portals>
</tnw-gateway>
